<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Details</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <nav class="smallNav">
            <a href="/flights">ALL FLIGHTS</a>
            <a href="/flights/new">ADD FLIGHT</a> 
        </nav>
    </header>
    <main>
        <h1>Flight Details</h1>
        <section id="details-page">
            <div><span class="details"><b>Airline:</b></span> <%= flight.airline %></div>
            <div><span class="details"><b>Airport:</b></span> <%= flight.airport %></div>
            <div><span class="details"><b>Flight #:</b></span> <%= flight.flightNo %></div>
            <div><span class="details"><b>Departs:</b></span> <%= flight.departs %></div>
            <div><span class="details"><b>Destinations:</b></span> 
                <table id="dest-list">
                    <thead>
                        <tr>
                            <th><span class="details"><b>Airport</b></span></th>
                            <th><span class="details"><b>Arrival</b></span></th>
                        </tr>
                    </thead>
                    <tbody><% flight.destinations.forEach(function(d) { %>
                        <tr>
                            <td><%= d.airport %> </td>
                            <td><%= d.arrival %> </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
        <section id="destinations-page">
        <br><br><h2>Destinations</h2>
        <form id="add-destination-form" method="POST"
        action="/flights/<%=flight._id%>/destinations">
            <label><span class="details"><b>Airport:</b></span></label>
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DFW">DFW</option>
                <option value="DEN">DEN</option>
                <option value="LAX">LAX</option>
                <option value="SAN">SAN</option>
            </select>
            <label><span class="details"><b>Arrival:</b></span></label>
            <input type="datetime-local" name="arrival" min="2022-06-11T00:00">
            <input type="submit" value="Add">
        </form>
        </section>
    </main>
</body>
</html>